@model IEnumerable<Showvey.ViewModels.SurveyTypeViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/layout.cshtml";
}
<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Create New</a>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table table-striped table-hover" id="tabledata">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                Survey Total
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SurveyTotal)
                </td>
                <td>
                    <a class="btn btn-warning" href="@Url.Action("Edit",new { id=item.Id})">Edit</a>
                    @*<a class="btn btn-info" href="@Url.Action("Details",new { id=item.Id})">Details</a>*@
                    <a class="btn btn-danger" href="@Url.Action("Delete",new { id=item.Id})">Delete</a>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
        }
    </tbody>
</table>
